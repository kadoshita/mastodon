= render 'shared/error_messages', object: form.object

.fields-group
  = form.text_area :message, wrapper: :with_block_label, rows: 5

.fields-row
  .fields-row__column.fields-row__column-6.fields-group
    = form.input :action_type, wrapper: :with_label, collection: %w(no_action direct_message reply documentation), label_method: ->(i) { I18n.t("inquiries.action_type.#{i}") }, prompt: I18n.t('inquiries.action_type_prompt')

.actions
  = form.button :button, t('inquiries.submit'), type: :submit
